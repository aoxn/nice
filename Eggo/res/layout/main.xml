<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
              android:background="@drawable/tk1" android:weightSum="1">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0.69">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageView2" android:layout_gravity="center|bottom|left|right|top"
            android:layout_weight="10" android:maxHeight="100dp" android:visibility="visible"/>

    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_weight="0.36">
        <ImageView
                android:layout_width="236dp"
                android:layout_height="212dp"
                android:id="@+id/imageView"
                android:background="@drawable/duolaameng8"
                android:layout_gravity="center"/>
    </FrameLayout>

</LinearLayout>

